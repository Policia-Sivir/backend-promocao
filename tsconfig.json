  {
    "compilerOptions": {
      "target": "ES2022",
      "lib": [
        "ES2023",
        "DOM"
      ],
      "module": "ESNext",
      "moduleResolution": "Node",
      "moduleDetection": "force",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noUncheckedIndexedAccess": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "outDir": "./dist",
      "sourceMap": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }